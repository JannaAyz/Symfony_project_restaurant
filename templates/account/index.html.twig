{% extends 'base.html.twig' %}

{% block title %}Page personnelle{% endblock %}
{% block stylesheets %}
{% include "partials_footer_version_classic.style.twig"%}
<style>
body {
    background: transparent!important;
    width: 100vw;
  }
  #zig-zags::after {
    display:none;
  }
  .gradient-custom {
  background: #f6d365;
  background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
  }
  .cntnr {
    margin-bottom: 100px;
    position: relative;
    z-index: 1;
  }
  .card-body >* {
    position: relative;
    z-index: 1;
  }
  .buttons a{
    color: black;
    font-size: 20px;   
    border: 3px solid white;
    padding: 10px;
    width: 200px; 
    font-weight: 600;
  }
  #lgoutBtn{
    border: 3px solid var(--orange);
  }
  .col-md-4 {
    transform: translateX(12px);
  }
  .card {
    --bs-card-border-radius: border-radius: ;
    border: 3px solid black;
  }
  .p-4 h6:nth-child(4), div.col-md-8 > div > h6:nth-child(1){
    font-size: 1.3rem;
  }
  #modification-iframe { 
    position: absolute;
    inset: 0;
    margin: auto;
    display: none;
    scale: 1.4;
    z-index: 10!important;
    background-color: white;
    height:300px;
    overflow: hidden;
    box-shadow: 2px 2px 10px rgba(221, 45, 74, .5);
    -webkit-animation: visible 200ms ease-out;
            animation: visible 200ms ease-out;
    padding: 15px;
  }
  #cross {
    cursor: pointer;
    position: absolute;
    inset: 0;
    margin: auto;
    display: none;
    z-index: 11!important;
    left: 396px;
  }
  .unvisible {
    display:none;
  }

  @media (min-width: 2500px) {
    #cross {
      transform: translateY(max(-1vw, -35px));
    }
  }
  @media (min-width: 1800px) {
    #cross {
      transform: translateY(max(-1vw, -10px));
    }
  }

  @media (min-width: 992px){
    .col-lg-6 {
      width: auto;
    }
    #modification-iframe { 
      top: -10%;
    }
    #cross {
      top: -430px;
    }
  }
  @media (min-width: 770px) AND (max-width: 991px) {
    #cross {
      top: -340px;
    }
  }
  @media (min-width: 769px){
    .cntnr {
      margin-top: 130px;
      -webkit-animation: popUp 550ms ;
              animation: popUp 550ms ;
      transform-origin: top;
    }
    .card {
      width: 800px;
    }
    .buttons {
      display:flex;
      flex-direction: column;
      justify-content: center;
      transform: translateY(30%);
      padding: 20px;
      gap: 13px;
    }
    @-webkit-keyframes popUp {
      from {
        transform: translateY(20%);
        opacity: 0;
      }
      to {
        opacity: .5 ;
        transform: translateY(0);
      }
  }
    @keyframes popUp {
      from {
        transform: translateY(20%);
        opacity: 0;
      }
      to {
        opacity: .5 ;
        transform: translateY(0);
      }
  }
  
  }
  @media (max-width: 768px){
    .buttons a:nth-child(1){
      padding: 10px 2rem;
    }
    .col-md-4 {
      transform: translateX(-12px);
      height: 280px;
    }
    .col-md-4 h5{
      transform: translateY(-70%);
    }
  
    .cntnr{
      margin-top:74px;
    }
    .p-4 {
      padding: 2.5rem!important;
      width: 90vw;
    }
    .card {
      border: 0px solid black;
      width: 104vw;
      margin-bottom: 0;
      margin-top: 0;
    }
    .buttons {
      transform: translateY(60%);
    }
    #modification-iframe { 
      scale: 1.1;
    }
    #cross {
      scale: .8;
      top: -271px;
      left: 302px;
    }
  }
</style>
{% endblock %}
{% block body %}
{% include "partials_nav.html.twig" %}
{% set currentDate = date("now") %}
<div class="cntnr">
  <div class="row d-flex justify-content-center h-100">
    <div class="col col-lg-6 mb-lg-6">
      <div class="card mb-3">
        {# <div class="row"> #}
        <div class="row">
          <div class="col-md-4 gradient-custom text-center text-white">
            {% if user.imageUrl is not null %}
            <img src="{{ asset('uploads/img/' ~ user.imageUrl) }}"
              alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
            {% else %}
            <img src="{{ asset('IMG/default.jpg') }}"
              alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
            {% endif %}
            <h5> {{ user.firstname }} {{ user.lastname }}</h5>
            <div class="buttons">
              <a href="#" id="mdfBtn" onclick="showIframe()">Modifier</a>
              <a id="lgoutBtn" href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card-body p-4">
              <h6>Informations</h6>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Email</h6>
                  <p class="text-muted"> {{ user.email }}</p>
                </div>
                <div class="col-6 mb-3">
                  <h6>Téléphone</h6>
                  <p class="text-muted"> {{ user.phone }}</p>
                </div>
              </div>
              <h6>Livraison</h6>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Adresse</h6>
                  <p class="text-muted">{{ user.address }}</p>
                </div>
                  <div class="col-6 mb-3">
                  <h6>Pays</h6>
                  <p class="text-muted">{{ user.country }}</p>
                </div>
                  <div class="col-6 mb-3">
                  <h6>Code Postal</h6>
                  <p class="text-muted">{{ user.zipcode }}</p>
                </div>
                <div class="col-6 mb-3">
                  <h6>Ville</h6>
                  <p class="text-muted">{{ user.city }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<iframe id="modification-iframe" src="{{ path('app_register_edit', {'id': user.id}) }}"></iframe>
<img  style ="width:40px;" onclick="closeIframe()" id="cross" src="{{ asset('IMG/close.svg')}}" alt="cross logo"/>
{% endblock %}
{% block javascripts %}
    <script>
      let toDisappear = document.querySelector('.buttons');
      let toBlur = document.querySelector('.card, #footer>div');
      const IFRAME = document.querySelector("#modification-iframe");
      const CROSS = document.querySelector("#cross");


      function showIframe(){
        IFRAME.style.display = "block";
        CROSS.style.display = "block";
        toBlur.style.filter = "blur(1rem)";
        toDisappear.style.display = "none";  
      };
      function closeIframe() {
          location.reload(true);
      };
    </script>
{% endblock %}
