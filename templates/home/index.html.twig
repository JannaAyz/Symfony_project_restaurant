<style>
#background {
    height: 90vh;
    transform: translateY(75px);
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(240, 134, 50, .5);
}
#background::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-image: url('{{ asset('IMG/coconut-bckg.jpg') }}');
    background-size: cover;
    z-index:-1;
    animation: visible 2.5s ease-out;

}
#background::after {
    content: "";
    position: absolute;
    z-index: 2;
    opacity: 1;
    top: 0; left: 0;
    transform: translateY(902%);
    width: 100%; height: 10%;
    background: linear-gradient(rgba(0, 0, 0, 0), white 99%);
    }

#background > * {
    position:absolute
}

#background p::before {
    content: '';   
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

#background p {
    z-index: 10;
    color: var(--orange);
    top:85%;
    font-size: 35px;
    font-weight: 500;
    backdrop-filter: brightness(300%);
    background: url('{{ asset('IMG/paper-bckg.jpg') }}');
    background-size: cover;
    padding: 10px;
    box-shadow: 2px 0px 4px rgba(39, 38, 53, .15);
    /*backdrop-filter: brightness(500%);*/
    background-blend-mode: screen;
}

#background h1 {
    height: 370px;
    {# width: 930px; #}
    max-width: 1030px;
    font-family: 'Montserrat', sans-serif;
    color: var(--yellowGreen);
    text-shadow: 0px 3px 4px var(--orange);
    font-weight: 600;
    z-index: 2;
    font-size: 140px;    
    padding: 30px;
    text-align: center;
    transform: translateY(200px);
    position: relative;
}
#background h1::before {
    content: '';
    position:absolute;
    height: 220px;
    width:220px;
    z-index:2;
    background-image: url('{{ asset('IMG/leaf.png') }}');
    background-color:rgba(0, 0, 0, 0);
    background-size: contain;
    background-repeat: no-repeat;
    right: -13%;
    bottom:35%;
    animation: float 23s ease-in-out 1s infinite alternate;
}

.presentation {
    display:flex;
    justify-content: center;
    {# margin: 50px; #}
    margin-top: 200px; 
    
    {# overflow-x: hidden!important; #}
}

/*all the cards from PRESENTATION*/
.text-bckg-color {
    height: 370px;
    width: 530px;
    position: relative;
    z-index:1;
}

.card2::before, .card3::before {
    content: '';
    position: absolute;
    z-index: -1;
    width: 106%;
    min-width:563px;
    height: 108%;
    left: -6%;
    top: -8%;
    background-image: url('{{ asset('IMG/paper-bckg.jpg') }}');
    background-size: cover; 
    overflow: visible;
    opacity: .6;
}

/*photoes from PRESENTATION*/
#presentation-img {
    object-fit:cover;
    height: 330px;
    width: 500px;
    opacity:1;
    position:relative;
    z-index: 2; 
    box-shadow: 3px 0px 13px rgba(0, 0, 0, 0.1);
}

.card1 {
    transition: transform 1100ms, opacity 800ms ease-in-out;
    transform: translate(-50%, 0%) rotate(-8deg);
    opacity: 0;
    background:rgba(232, 233, 243, 0.3);
    padding:20px;
}

.highlighted-green {
    font-weight: 500;
    color: var(--raisinBlack);
    text-shadow: 1px 1px 1px var(--yellowGreen);
}

.card1 > h2, .card1 > p {
    transform: rotate(4deg);
    text-align: center;
    animation: visible 3s ease-out forwards;
}

.card1 > h2, .card4 > h2 {
    color: #DD2D4A;
    font-size:45px;
    margin:20px;
}

.card4 > * {
    transform: rotate(-5deg);
    text-align: center;
}

.card4 > h2 {
    color: var(--orange);
    font-size:55px;
    margin:0px 0 50px;
}

.card1 > p, .card4 > p {
    font-size:20px;
    margin:20px;
}

.card2 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    scale: .85;
    transform: translate(50%, 40%) rotate(5deg);
    opacity: 0;
}
.left-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(0%, 0%) rotate(-5deg);
    opacity: 1;
}
.right-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(-3%, 0%) rotate(0deg);
    opacity: 1; 
}
.card3 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(-50%, 0%) rotate(-8deg);
    opacity: 0;
    transform: scale(.85);
    background-color: rgba(232, 233, 243, 0.3);
}
.card4 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(50%, 40%) rotate(5deg);
    opacity: .16;
    background-color: rgba(232, 233, 243, 0.4);
    padding: 30px;
}

.third-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(0%, 0%);
    opacity: 1;
}

.fourth-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(5%, -10%) rotate(5deg);
    opacity: 1; 
}

.gallery {
    display:flex;
    flex-wrap: wrap;
    justify-content: center;
    gap:20px;
    position: relative;
    transform: translateY(18%);
    padding: 0px 100px 0px;
    margin-bottom: 0px;
    z-index:1;
}

.gallery figure {   
    filter: saturate(1.3) sepia(0.1) url('#grain');
}

.gallery figure img {
    opacity: 0;
    width: 350px;
    height: 350px;
    position: relative;
    box-shadow: 3px 0px 3px rgba(0, 0, 0, 0.21);
    cursor: pointer;
}

.gallery figure::after {
content: '';
display: block;
height: 0%;
width:100%;
background: var(--raisinBlack);
position: absolute;
bottom: 0;
z-index:1;
opacity: .7;
cursor: pointer;
}

.gallery > figure:nth-child(7), .gallery > figure:nth-child(8),
.gallery > figure:nth-child(7) > p, .gallery > figure:nth-child(8) > p {
height: 0px;
display: none;
}

.gallery > figure:nth-child(2) img, .gallery > figure:nth-child(5) img {
    transform: translateY(7%);
}

.gallery > figure:nth-child(2)::after, .gallery > figure:nth-child(5)::after {
    bottom: -7.05%;
}

.gallery figure:hover::after {
animation: grow 350ms ease-in-out;
height: 100%;
}

.gallery > figure:nth-child(2) > p, .gallery > figure:nth-child(4) > p,
.gallery > figure:nth-child(6) > p {
    color: var(--ghostWhite);
}

.gallery > figure > p {
    position: absolute;
    color: var(--orange);
    top: 40%;
    left: 20%;
    z-index:3;
    font-weight: 500;
    font-size: 25px;
    cursor: pointer;
    user-select: none;
    opacity: 0;
    
}
.gallery > figure:hover >p {
    transition: opacity 350ms;
    opacity: 1;
}
.makeVisible {
    animation-delay: calc(var(--order)*100ms)
}
.button-wrapper {
    display: flex;
    justify-content: center;
    margin: 0;
    margin-bottom: -70px;
}
.button p{
