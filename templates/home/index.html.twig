<script>
  window.addEventListener("scroll", function () {
    const CARD1 = document.querySelector(".card1");
    const CARD2 = document.querySelector(".card2");
    const CARD3 = document.querySelector(".card3");
    const CARD4 = document.querySelector(".card4");
    const IMG = document.querySelectorAll(".gallery figure img");
    {# document.querySelector("body > section.gallery > figure > img") #}
    const BTN = document.querySelector(".button-89");
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

    if (scrollTop >= 250 && scrollTop <= 1150) {
      CARD1.classList.add("left-card");
      CARD2.classList.add("right-card");
    } else {
      CARD1.classList.remove("left-card");
      CARD2.classList.remove("right-card");
    }

    if (scrollTop >= 700 && scrollTop <= 1750) {
      CARD3.classList.add("third-card");
      CARD4.classList.add("fourth-card");
      BTN.classList.add("make-visible");
    } else {
      CARD3.classList.remove("third-card");
      CARD4.classList.remove("fourth-card");
    }

    if (scrollTop >= 1560) {
      IMG.forEach(function(img) {
        img.classList.add("makeVisible");
      });
    }

    if (scrollTop <= 1160) {
        IMG.forEach(function(img) {
        img.classList.remove("makeVisible");
      });
    }

