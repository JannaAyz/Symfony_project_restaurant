.presentation {
    display:flex;
    justify-content: center;
    margin: 50px;
    margin-top: 200px; 
}

.presentation img {
    box-shadow: 3px 0px 13px rgba(0, 0, 0, 0.15);
    padding: 0;
}

#straw {
    object-fit:cover;
    padding:40px;
    height: 370px;
    width: 530px;
    opacity:1;
    position:absolute;
    z-index: 2; 
}

.card1 {
    transition: transform 1100ms, opacity 800ms ease-in-out;
    transform: translate(-50%, 0%) rotate(-8deg);
    opacity: 0;
    background:rgba(232, 233, 243, 0.3);
    padding:20px;
}
.card1 > h2, .card1 > p {
    transform: rotate(4deg);
    text-align: center;
    animation: visible 3s ease-out forwards;
}

.card1 > h2 {
    color: #DD2D4A;
    font-size:45px;
    margin:20px;
}
.card1 > p {
    font-size:20px;
    margin:20px;
}

.card2 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    scale: .8;
    transform: translate(50%, 40%) rotate(5deg);
    opacity: 0;
    background:rgba(232, 233, 243, 0.5);
}
.left-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(0%, 0%) rotate(-5deg);
    opacity: 1;
}
.right-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(-10%, 0%) rotate(0deg);
    opacity: 1; 
}
.card3 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(-50%, 0%) rotate(-8deg);
    opacity: 0;
    transform: scale(.85);
    background-color: rgba(232, 233, 243, 0.3);
}
.card4 {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(50%, 40%) rotate(5deg);
    opacity: 0;
    background-color: rgba(232, 233, 243, 0.5);
}
.third-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(0%, 0%);
    opacity: 1;
}
.fourth-card {
    transition: transform 1100ms, opacity 1500ms ease-in-out;
    transform: translate(10%, 0%) rotate(5deg);
    opacity: 1; 
}

.btn-parent {
    display:flex;
    justify-content: center;
    align-items: center;
}

.gallery {
    display:flex;
    flex-wrap: wrap;
    justify-content: center;
    gap:20px;
    position: relative;
    {# transform: translateY(8%); #}
    padding: 0px 100px 0px;
    margin-bottom:0px;
    {# background-color: green; #}

   


}



.gallery figure {   
    filter: saturate(1.3) sepia(0.1) url('#grain');
}

.gallery figure img {
    opacity: 0;
    width: 350px;
    height: 350px;
    position: relative;
    box-shadow: 3px 0px 3px rgba(0, 0, 0, 0.21);
    cursor: pointer;
}

.gallery figure::after {
content: '';
display: block;
height: 0%;
width:100%;
background: var(--raisinBlack);
position: absolute;
bottom: 0;
z-index:1;
opacity: .7;
cursor: pointer;
}

.gallery > figure:nth-child(2)::after, .gallery > figure:nth-child(5)::after {
    bottom: -7%;
}

.gallery figure:hover::after {
animation: grow 350ms ease-in-out;
height: 100%;
}

.gallery > figure:nth-child(2) img, .gallery > figure:nth-child(5) img {
    transform: translateY(7%);
}
.gallery > figure:nth-child(2) > p, .gallery > figure:nth-child(4) > p,
.gallery > figure:nth-child(6) > p {
    color: var(--ghostWhite);
}

.gallery > figure > p {
    position: absolute;
    color: var(--orange);
    top: 40%;
    left: 20%;
    z-index:3;
    font-weight: 500;
    font-size: 25px;
    cursor: pointer;
    user-select: none;
    opacity: 0;
    
}
.gallery > figure:hover >p {
    transition: opacity 350ms;
    opacity: 1;
}
.makeVisible {
    opacity: 1;
    animation: visible 1s ease forwards;
    animation-delay: calc(var(--order)*100ms)
}

.button-89 {
  --b: 3px;   /* border thickness */
  --s: .45em; /* size of the corner */
  --color: #272635;
 
  
  padding: calc(.5em + var(--s)) calc(.9em + var(--s));
  color: var(--color);
  --_p: var(--s);
  background:
    conic-gradient(from 90deg at var(--b) var(--b),#0000 90deg,var(--color) 0)
    var(--_p) var(--_p)/calc(100% - var(--b) - 2*var(--_p)) calc(100% - var(--b) - 2*var(--_p));
  transition: .3s linear, color 0s, background-color 0s;
  outline: var(--b) solid #0000;
  outline-offset: .6em;
  font-size: 16px;

  border: 0;

  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;

  font-size: 1.2rem;
  text-transform: uppercase;
}

.button-89:hover,
.button-89:focus-visible{
  --_p: 0px;
  outline-color: var(--color);
  outline-offset: .05em;
}

.button-89:active {
  background: var(--color);
  /*color: white;*/
}
.button-89 {
    color: #272635;/*raisin black*/
    position: relative;
    z-index: 3;
    margin-top: 50px;
    font-weight: 500;
}

