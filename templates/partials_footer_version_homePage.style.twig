{% block stylesheets %}
<style>
    #zig-zags {
        display:none;
    }
    #footer::before {
    content: '';
    position: absolute!important;
    z-index: -10!important;
    overflow: hidden;
    background: linear-gradient( #F08632 10%, #DD2D4A 90%);
    background-size: cover;
    -webkit-mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    -webkit-mask-size: 100%;
    mask-size: 100%;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    height: 200%!important;
    top: -98%!important;
    /*top: -98%!important; SMALL*/
    opacity: 1!important;
    {# width: 110%!important; #}
            width: 100%!important;

    /*width: 1300px!important; SMALL*/
    }
    #footer {
        position: relative;
        height: 580px;
        align-items: flex-end;
        padding: 70px;
        width: 100vw!important;
    }
    #footer > div {
        width: 100vw;
        left:0;
    }
    #footer::after {
        bottom: -12%!important;
    }
    @media screen and (min-width: 2000px) {
        #footer {
        height: 550px;
        }
    }
    @media screen and (min-width: 2001px) and (max-width:1000){
        #footer {
        height: 570px;
        }
    }
    @media screen and (min-width: 1600px) {
        #footer::before {
            background: linear-gradient(rgba(240, 134, 50, .06), rgba(240, 134, 50, .15), #F08632, #DD2D4A);
            height: 265%!important;
            top: -155%!important;
            {# width: 100vw!important; #}
        }
        #footer {
        height: 610px;
        }
    }
    @media screen and (max-width: 1290px) {
        #footer > div:nth-child(3) * {
            transform: translateY(-95%);
        }
    }
    @media screen and (max-width: 1100px) AND (min-width: 769px){
        footer {
            transform: translateY(15%);
        }
        #footer > * {
            transform: translateX(0%)!important;   
        }
        #footer::before {
            width: 1300px!important; 
            transform: translateX(-150px);
        }
    }
    @media screen and (max-width: 800px){
        footer {
            transform: translateY(35%);
        }
        #footer > div:nth-child(3) * , #footer > div:nth-child(2){
            transform: translateY(-45%);
        }
    }
    @media screen and (max-width: 768px) {
        #footer {
            padding: 10px;
        }
        #footer > * {
            transform: translateX(3%)!important; 
            width: 100vw!important;  
        }
        #footer::before {
            width: 1300px!important;
            transform: translateX(-70px);
            overflow-x: hidden!important;
        }
    }
</style>
{% endblock %}