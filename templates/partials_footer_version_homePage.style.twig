{% block stylesheets %}
<style>
    #zig-zags {
        display:none;
    }
    #footer::before {
    content: '';
    position: absolute!important;
    z-index: -10!important;
    overflow-x: hidden;
    background: linear-gradient( #F08632 10%, #DD2D4A 90%);
    -webkit-mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    -webkit-mask-size: 100%;
    mask-size: 100%;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    height: 200%!important;
    top: -98%!important;
    /*top: -98%!important; SMALL*/
    opacity: 1!important;
    width: 1600px!important;
    /*width: 1300px!important; SMALL*/
    }
    #footer {
        position: relative;
        height: 630px;
        align-items: flex-end;
    }
    #footer > div {
        width: 100vw;
        left:0;
    }
    #footer::after {
        bottom: -12%!important;
    }
    @media screen and (min-width: 1600px) {
        #footer::before {
            background: linear-gradient(rgba(240, 134, 50, .06), rgba(240, 134, 50, .15), #F08632, #DD2D4A);
            height: 265%!important;
            top: -155%!important;
            width: 100vw!important;
        }
    }
    @media screen and (max-width: 1290px) {
        #footer > div:nth-child(3) * {
            transform: translateY(-95%);
        }
    }
    @media screen and (max-width: 1100px) AND (min-width: 769px){
        footer {
            transform: translateY(15%);
        }
        #footer > * {
            transform: translateX(0%)!important;   
        }
        #footer::before {
            width: 1300px!important; 
            transform: translateX(-150px);
        }
    }
    @media screen and (max-width: 800px){
        footer {
            transform: translateY(35%);
        }
        #footer > div:nth-child(3) * , #footer > div:nth-child(2){
            transform: translateY(-45%);
        }
    }
    @media screen and (max-width: 768px) {
        #footer > * {
            transform: translateX(3%)!important;   
        }
        #footer::before {
            width: 1300px!important; 
            transform: translateX(-70px);
        }
    }
</style>
{% endblock %}