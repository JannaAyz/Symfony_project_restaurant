{% extends 'base.html.twig' %}

{% block title %}Confirmation de réservation{% endblock %}
{% block stylesheets %}
{% include "partials/footer_version_homePage.style.twig"%}
<style>
   #footer::before {
        background: linear-gradient(transparent, transparent, #F08632, #DD2D4A);
    }

    body {
        background: url('{{ asset(' IMG/orange-watercolor.jpg') }}');
    }

    .container {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100vh;
        color: white;
        -webkit-backdrop-filter: blur(55px);
        backdrop-filter: blur(55px);
        position: relative;
        width: 880px;
        box-shadow: 3px 0px 13px rgba(0, 0, 0, 0.8);
        opacity: .9;
    }

    .container::before {
        position: absolute;
        content: '';
        z-index: 2;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: .6;
        background-color: black;
    }

    .container>* {
        position: relative;
        z-index: 3;
        opacity: 1;
    }

    .coordinates {
        padding: 15px;
        margin: 15px;
        border: 3px solid var(--yellowGreen);
    }

    .coordinates p {
        font-size: 18px;
        font-weight: 400;

    }

    .container h3,
    .container h4 {
        font-size: clamp(16px, 10vw, 24px);
    }

    .coordinates h2 {
        font-size: 22px;
        margin: 20px;
        font-weight: 500;
    }

    #link {
        text-shadow: 1.5px 1.5px 2px var(--orange);
        color: ;
    }

    .container h4 {
        margin-top: 30px;
        color: var(--yellowGreen);

    }

    h1 {
        color: var(--yellowGreen);
        font-size: 50px;
        font-weight: 400;
        color: white;
        text-shadow: 0px 1px 1px var(--orange);
    }

    @media screen and (min-width: 1580px) {
        h1 {
            font-size: 50px;
        }

        .coordinates {
            margin: 100px auto;
        }

        .coordinates h2 {
            font-size: 26px;
            margin: 30px;
        }

        .coordinates p {
            font-size: 22px;
        }
    }

    @media screen and (max-width: 580px) {
        .container {
            width: 90vw;
            padding: 70% 3%;
        }
    }
</style>
{% endblock %}
{% block body %}
{% include "partials/_nav.html.twig" %}
    <div class="container">
        <h1>Merci pour votre réservation !</h1>
        <div class="coordinates">
        <h2>Voici le récapitulatif de votre réservation</h2>
        <p>Nom : {{ reservation.reservationName }}</p>
        <p>Email : {{ reservation.email }}</p>
        <p>Nombre de personnes : {{ reservation.number }}</p>
        <p>Date : {{ reservation.date|date('d/m/Y') }}</p>
        <p>Heure : {{ reservation.heure|date('H:i') }}</p>
        </div>
        <h3>Pour modifier votre réservation du {{ reservation.date|date('d') }}/{{ reservation.date|date('m') }} <a href="{{ path('app_contact') }}"><span id="link">contactez-nous</span>.</a></h3>
        <h4> Nous avons hâte de vous retrouver</h4>
    </div>
    
{% endblock %}
