     });  


    // Écouteur d'événement pour le survol des options d'un élément select
    const OPTIONS =document.querySelector('.form-control > option');
OPTIONS.addEventListener('focus', function() {
  // Appliquer les styles souhaités aux options
  OPTIONS.forEach(function(options) {
      
    options.style.backgroundColor = 'red';
    options.style.color = '#FFFFFF';
    options.style.display = 'none';
    });
  
}); 
</script>
{% endblock %}
