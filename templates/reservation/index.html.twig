body {
    background: url('{{ asset('IMG/orange-watercolor.jpg') }}');
}
.container {
    margin-top: 170px;
    position: relative;
    z-index:1;
    animation: popUp 550ms ;
    transform-origin: top;
}

@keyframes popUp {
    from {
    margin-top: 170px;

        /* transform: scale(1, 0);*/
        transform: translateY(20%);
        opacity: 0;
    }
    to {
    margin-top: 170px;

        /*transform: scale(1, 1);*/
        opacity: .5 ;
        transform: translateY(0);
    }
}

#bottom {
   height: 30vh!important;   
   width: 100%;
}

/* Form Styles */
#form {
	padding: 5rem 0;
}
#principal > div > div.form-title > h1 {
font-size: 2.1rem;
margin-top:-55px;
margin-bottom: -20px;
}

.form-title {
	
	/*color: var(--black-1);*/
	font-weight: 600;
}
.form-wrapper {
	padding: 3rem 0;
}
.form-wrapper form {
	display: grid;
	grid-template-columns: 1fr;
	gap: 2rem;
}
.form-group .form__label {
	{# font-size: 1.6rem; #}
	/*font-family: Poppins;
	color: var(--black-2);*/
	font-weight: 500;
}





.form-group textarea {
	resize: vertical;
}
.form-wrapper button[type='submit'] {
	width: max-content;
	border: none;
	padding: 1rem 4rem;
	font-weight: 500;
	letter-spacing: 0.1rem;
}

.form-group input,
.form-group textarea,
.form-group select {
	width: 100%;
	font-size: 20px;
	background-color: none;
    background: url('{{ asset('IMG/orange-watercolor.jpg') }}');
	font-weight: 600;
	padding: 1.5rem;
	border-radius: 2px;
	margin-top: 0.5rem;
	color: var(--raisinBlack);
    border: 3px solid black;
}
.form-group input,
.form-group textarea,
.form-group select {
    background: transparent;
    background: rgba(232, 233, 243, .2);
    background: rgba(221, 45, 74, .04);
    background: rgba(240, 134, 50, .1);
    backdrop-filter: blur(20px);
}
    .form-group > input:focus , .form-group > *:focus , 
    .form-group > input:hover, select:hover, select:active, .form-group > option,
    .form-control > option {
        border: 3px solid var(--yellowGreen);
        background-color: rgba(232, 233, 243, .1); 
        box-shadow: 0px 0px 0px black;
    }
    
    .form-group > option:focus, .form-control > option:focus {
        background: rgba(232, 233, 243, .5);
    }

    .form-control > option, .form-select > option{
        font-size: 20px;
        background-color: #f7ecddcc;
        font-weight: 500;
    }

select {
    text-transform: none;
    word-wrap: normal;
}
select -internal-list-box {
    overflow: visible !important;
    display:none;
}

.form-group label {
		font-size: 1.6rem;
}


@media only screen and (min-width: 768px) {
    .form-title {
        margin-bottom: -30px;
    }
    .form_widget {
		font-size: 3.6rem;
	}
	.form-wrapper {
		padding: 5rem 0;
	}
	.form-wrapper form {
		grid-template-columns: 1fr 1fr;
	}
	.form-group-full {
		grid-column: 1/3;
	}
	
	.form-group input,
	.form-group textarea,
	.form-group select {
		{# padding: 2rem; 
		margin-top: 1.5rem;#}
	}
    
    .form-group label {
		font-size: 1.8rem;
    }

}

form button {
    margin: 30px 0 50px;
    font-size: 1.3rem!important;
    color: black;
    text-transform: uppercase;
    border: 3px solid black!important;
    font-weight: 500!important;
    background: rgba(149, 198, 35, .8);
    backdrop-filter: blur(10px);
}
form button:hover {
    color: ;
    background: rgba(232, 233, 243, .5);
    border: 3px solid var(--yellowGreen)!important;
    text-shadow: 2px 3px 1px var(--yellowGreen);
}

#anchor{
    {# height: 75vh; #}
    {# transform: translateY(-20vw); #}
}
footer {
    margin-top:50px;
    top:0;
}

</style>
{% endblock %}
{% block title %}Formulaire de réservation{% endblock %}
{% block body %}
    {% include "partials/_nav.html.twig" %}
<div class="container">
<div class="form-title">
<h1> Formulaire de réservation</h1>
</div>
<div class="form-wrapper">
{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.date, 'Date') }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control js-datepicker'}}) }}
        {{ form_errors(form.date) }}
    </div>
    <div class="form-group">
    {{ form_label(form.heure, 'Heure') }}
    {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.heure) }}
    </div>
    <div class="form-group">
    {{ form_label(form.reservation_name, 'Nom de la réservation') }}
    {{ form_widget(form.reservation_name, {'attr': {'placeholder': 'Nom de la réservation', 'class': 'form-control'}}) }}
    {{ form_errors(form.reservation_name) }}
    </div>
    <div class="form-group">
    {{ form_label(form.restaurant_name, 'Restaurant') }}
    {{ form_widget(form.restaurant_name, {'attr': {'placeholder': 'Restaurant à choisir', 'class': 'form-select'}}) }}
    {{ form_errors(form.restaurant_name) }}
    </div>
    <div class="form-group">
    {{ form_label(form.number, 'Nombre de personnes') }}
    {{ form_widget(form.number, {'attr': {'placeholder': 'Nombre de personnes', 'class': 'form-control'}}) }}
    {{ form_errors(form.number) }}
    </div>
    <div class="form-group">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
    {{ form_errors(form.email) }}
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <div class="form-group">
    {{ form_label(form.vip) }}
    {{ form_widget(form.vip, { 'attr': {'class': 'form-check-input'} }) }}
    {{ form_errors(form.vip) }}
    </div>
    {% endif %} 
    
    {{ form_widget(form.submit, {'attr': {'class': 'sbmit-btn'}}) }}
    
{{ form_end(form) }}
</div>
</div>

