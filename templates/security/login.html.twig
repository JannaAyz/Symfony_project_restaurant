{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
{% include "partials_footer_version_classic.style.twig"%}
<style>
    body {
        background: transparent !important;
        width: 100vw;
    }

    #zig-zags::after {
        display: none;
    }

    #footer {
        -webkit-backdrop-filter: linear-gradient(white, black) !important;
                backdrop-filter: linear-gradient(white, black) !important;
    }

    .container {
        margin-top: 180px;
        height: 120vh;
        display: flex;
        justify-content: center;
    }

    form {
        position: relative;
    }

    form::after {
        content: url("{{ asset('IMG/three-cocos.png')}}");
        background: ;
        scale: .5;
        background-size: no-cover;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 50%;
        left: 5%;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        font-size: 20px;
        background-color: none;
        font-weight: 600;
        padding: 1.5rem;
        border-radius: 2px;
        margin-top: 0.5rem;
        color: var(--raisinBlack);
        border: 3px solid black;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        background: rgba(240, 134, 50, .1);
        -webkit-backdrop-filter: blur(20px);
                backdrop-filter: blur(20px);
    }

    .form-group>input:focus,
    .form-group>*:focus,
    .form-group>input:hover,
    select:hover,
    select:active,
    .form-group>option,
    .form-control>option {
        border: 3px solid var(--yellowGreen);
        background-color: rgba(232, 233, 243, .1);
        box-shadow: 0px 0px 0px black;
    }

    h1 {
        font-size: 2.1rem;
        margin-top: -55px;
        margin-bottom: 40px;
    }

    button {
        margin: 30px 0 50px;
        color: black;
        text-transform: uppercase;
        border: 3px solid black !important;
        font-weight: 500;
        background: rgba(149, 198, 35, .8);
        -webkit-backdrop-filter: blur(10px);
                backdrop-filter: blur(10px);
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
    }

    button:hover {
        background: rgba(232, 233, 243, .5);
        border: 3px solid var(--yellowGreen) !important;
        text-shadow: 2px 3px 1px var(--yellowGreen);
    }

    .form-group label {
        font-size: 1.3rem;
    }

    .form-group input {
        padding: 1.1rem;
        width: 600px;
    }

    .wrong {
        color: var(--rustyRed);
        padding: 16px 0;
        margin-top: -26px;
        font-size: 1.3rem;
        position: relative;
        z-index: 5;
    }

    .redStar {
        color: var(--rustyRed);
        font-weight: 28px;
        padding-right: 5px;
    }

    label+p {
        margin-bottom: 0;
        text-align: right;
        "

    }

    @media screen and (max-width: 651px) {
        .container form {
            width: 90vw;
        }

        .container input,
        button {
            width: 87vw;
        }

        input {
            width: 70vw;
        }

        button {
            margin: 50px auto;
        }

        form::after {
            content: url("{{ asset('IMG/three-cocos.png')}}");
            background: ;
            scale: .4;
            background-size: no-cover;
            position: absolute;
            width: 100%;
            height: 100%;
            top: 40%;
            left: -3%;
        }
    }
</style>
{% endblock %}
{% block body %}
{% include "partials_nav.html.twig" %}
<div class="container">

<form method="post">
    <h1>Connectez-vous</h1>
    {% if error %}
        <div class="wrong">Ces indentifiants ne sont pas valides</div>
    {% endif %}
    <div class="outline mb-4 form-group">
        <label for="inputEmail" class="form-label">Email</label>
        <p><span class="redStar">*</span>admin@mail.fr</p>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" aria-describedby="emailHelp" autocomplete="email" required autofocus>
        <div id="emailHelp" class="form-text">Nous ne partagerons votre email avec personne.</div>
    </div>
    <div class="mb-3 form-group">
        <label for="inputPassword" class="form-label">Mot de passe</label>
        <p><span class="redStar">*</span>jesuisadmin</p>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>

    <button class="sbmit-btn" type="submit">Se connecter</button>
        
</form>
    {# <div id="cocos-wrapper">
        <img id="cocos" src="{{ asset('IMG/three-cocos.png')}}" alt="">
    </div> #}
</div>
{% endblock %}
